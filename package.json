{
  "name": "simple-rune-maker",
  "version": "1.0.0",
  "description": "An app to set runes manually in League of Legends, but out of the client. (In case your client is so laggy you can't set your runes)",
  "main": "main.js",
  "scripts": {
    "test": "electron .",
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IzaakSantana/simple-rune-maker.git"
  },
  "author": "IzaakSantana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IzaakSantana/simple-rune-maker/issues"
  },
  "homepage": "https://github.com/IzaakSantana/simple-rune-maker#readme",
  "dependencies": {
    "axios": "^0.26.0"
  },
  "devDependencies": {
    "electron": "^17.1.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "simple_rune_maker"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
